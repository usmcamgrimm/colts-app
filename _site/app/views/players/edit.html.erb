<h2>Updating <%= @player.name %>  </h2>

<h3 class="update-title">Player Information</h3>

<div class="form-container">
  <div class="edit-fields">
    <%= form_with(model: @player) do |f| %>
      <div class="form-field">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="form-field">
        <%= f.label :number %>
        <%= f.number_field :number %>
      </div>
      <div class="form-field">
        <%= f.label :position %>
        <%= f.text_field :position %>
      </div>
      <div class="form-field">
        <%= f.label :status %>
        <%= f.text_field :status %>
      </div>
      <div class="form-field">
        <%= f.label :exp %>
        <%= f.number_field :exp %>
      </div>
      <div class="form-field">
        <%= f.label :college %>
        <%= f.text_field :college %>
      </div>

      <%= f.submit "Update", :class => "submit-button" %>
    <% end %>
  </div>
</div>

<h3 class="stats-update"><%=  @player.name %> Stats Update</h3>

<div class="form-container">
  <div class="edit-fields">
    <%= render "form", player: @player %>
  </div>
</div>