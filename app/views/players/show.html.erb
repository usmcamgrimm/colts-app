<div class="player-page">
  <section class="player-section">
    <img class="player-image">
      <%= image_tag @player.photo, class: "playerShow", alt: "Colts player headshot" %>
    <div class="player-header">
      <h2><%= @player.name %></h2>
      <div class="player-details">
        <h3 class="playerNum"><%= @player.number %></h3>
        &#x25CF;
        <h3 class="playerPos"><%= @player.position %></h3>
      </div>
      <div class="player-status">
        <p class="status">Status: <%= @player.status %></p>
      </div>
      <div class="player-xp">
        <p class="xp">Experience: <%= @player.exp %></p>
      </div>
      <div class="player-college">
          <p class="college">College: <%= @player.college %></p>
        </div>
    </div>
  </section>

  <section class="edit-player">
    <%= link_to "Edit Player", edit_player_path(@player), class: "edit-btn" %>
  </section>

  <div class="stats-section">
    <div class="stats-title">
      <h2>2023 Season Stats</h2>
    </div>

    <% if @player.pass_att != nil %>
      <p><strong>Pass Attempts:</strong> <%= @player.pass_att %></p>
    <% end %>

    <% if @player.comp != nil %>
      <p><strong>Completions:</strong> <%= @player.comp %></p>
    <% end %>

    <% if @player.pass_yards != nil %>
      <p><strong>Passing Yards:</strong> <%= @player.pass_yards %></p>
    <% end %>

    <% if @player.pass_td != nil %>
      <p><strong>Touchdowns:</strong> <%= @player.pass_td %></p>
    <% end %>

    <% if @player.rush_att != nil %>
      <p><strong>Rushes:</strong> <%= @player.rush_att %></p>
    <% end %>

    <% if @player.rush_yds != nil %>
      <p><strong>Rushing Yards:</strong> <%= @player.rush_yds %></p>
    <% end %>

    <% if @player.rush_ypc != nil %>
      <p><strong>Yards per Carry:</strong> <%= @player.rush_ypc %></p>
    <% end %>

    <% if @player.rush_td != nil && @player.rush_td != 0 %>
      <p><strong>Rushing Touchdowns:</strong> <%= @player.rush_td %></p>
    <% end %>
    
    <% if @player.rec != nil %>
      <p><strong>Receptions:</strong> <%= @player.rec %></p>
    <% end %>

    <% if @player.rec_yards != nil %>
      <p><strong>Yards:</strong> <%= @player.rec_yards %></p>
    <% end %>

    <% if @player.rec_td != nil %>
      <p><strong>Touchdowns:</strong> <%= @player.rec_td %></p>
    <% end %>

  </div>
</div>