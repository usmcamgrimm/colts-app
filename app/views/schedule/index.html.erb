<div class="schedule-header">
  <h2>
    2023 Regular Season
  </h2>
</div>

<div class="regseason">
  <% @schedules.each do |schedule| %>
    <div class="week-info">
      <div class="row-header">
        <p class="week">
          Week <%= schedule.week %>
        </p>
        <p class="gameDate">
          <%= gamedate(schedule) %>
        </p>
          &#x25CF;
        <p class="gameTime">
          <%= gametime(schedule) %>
        </p>
      </div>
      <div class="game-details">
        <% if schedule.location == "away" %>
          <p class="away-game">@</p>
        <% else %>
          <p class="home-game"> </p>
        <% end %>
        <% if schedule.oppimage.present? %>
          <%= image_tag schedule.oppimage, class: "teamImage", alt: "Opponent team logo" %>
          <% end %>
        <p class="oppName">
          <%= schedule.oppname %>
        </p>
        <div class="game-result">
          <p class="result">
            <%= schedule.result %>
          </p>
          <p class="score">
            <%= schedule.score %>
          </p>
        </div>
      </div>
    </div>
    <hr class="game-divider" />
  <% end %>
</div>