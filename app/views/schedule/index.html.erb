<div class="schedule-header">
  <h2>
    2025 Regular Season
  </h2>
</div>

<div class="regseason">
  <% @schedules.each do |schedule| %>
    <div class="week-info" style="display:flex; flex-direction: column; justify-content: center; align-items:center;">
      <% if schedule.oppname == "Bye" %>
        <div class="row-header" style="margin-bottom: 16px;">
          <p class="week">
            Week <%= schedule.week %>
          </p>
          <p class="oppName">
            <%= schedule.oppname %>
          </p>
        </div>
      <% else %>
        <div class="row-header">
          <p class="week">
            Week <%= schedule.week %>
          </p>
          <p class="gameDate">
            <%= gamedate(schedule) %>
          </p>
            &#x25CF;
          <p class="gameTime">
            <%= gametime(schedule) %>
          </p>
        </div>
        <div class="game-details">
          <div class="opp-details">
            <% if schedule.location == "away" %>
              <p class="away-game">@</p>
            <% else %>
              <p class="home-game">vs</p>
            <% end %>
            <% if schedule.oppimage.present? %>
              <%= image_tag schedule.oppimage, class: "teamImage", alt: "Opponent team logo" %>
            <% end %>
            <div class="opponent">
              <p class="oppCity">
                <%= schedule.oppcity %>
              </p>
              <p class="oppName">
                <%= schedule.oppname %>
              </p>
            </div>
            <div class="game-result">
              <p class="result">
                <%= schedule.result %>
              </p>
              <p class="score">
                <%= schedule.score %>
              </p>
            </div>
          </div>
          <div class="location-details">
            <div class="stadium-location">
              <%= link_to schedule.map, target: :_blank do %>
                <%= schedule.stadium %>
              <% end %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <hr class="game-divider" style="margin:0 auto; margin-bottom: 16px;" />
  <% end %>
</div>