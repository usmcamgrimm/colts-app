<section class="player-page">
  <div class="player-details">
    <div class="player-section">
      <img class="player-image">
        <%= image_tag @suspended.photo %>
      <div class="player-header">
        <h2><%= @suspended.name %></h2>
        <div class="player-details">
          <h3 class="playerNum"><%= @suspended.number %></h3>
          &#x25CF;
          <h3 class="playerPos"><%= @suspended.position %></h3>
        </div>
        <div class="player-status">
          <p class="status">Status: <%= @suspended.status %></p>
        </div>
        <div class="player-xp">
          <p class="xp">Experience: <%= @suspended.exp %></p>
        </div>
        <div class="player-college">
            <p class="college">College: <%= @suspended.college %></p>
          </div>
      </div> 
    </div>
  </div>
  <div class="stats-section">
    <div class="stats-title">
      <h2>2023 Season Stats</h2>
    </div>
  </div>
</section>