<section class="player-page">
  <div class="player-details">
    <div class="player-section">
      <img class="player-image">
        <%= image_tag @injured.photo %>
      <div class="player-header">
        <h2><%= @injured.name %></h2>
        <div class="player-details">
          <h3 class="playerNum"><%= @injured.number %></h3>
          &#x25CF;
          <h3 class="playerPos"><%= @injured.position %></h3>
        </div>
        <div class="player-status">
          <p class="status">Status: <%= @injured.status %></p>
        </div>
        <div class="player-xp">
          <p class="xp">Experience: <%= @injured.exp %></p>
        </div>
        <div class="player-college">
            <p class="college">College: <%= @injured.college %></p>
          </div>
      </div> 
    </div>
  </div>
  <div class="stats-section">
    <div class="stats-title">
      <h2>2023 Season Stats</h2>
    </div>
  </div>
</section>